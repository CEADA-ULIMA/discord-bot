{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2017",
    "module": "commonjs",
    "lib": [],
    "jsx": "preserve",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,

    "strict": true,

    "esModuleInterop": true,
    "baseUrl": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },

  "include": [
    "src/**/*"
  ],

  "exclude": [
    "node_modules"
  ]
}
